{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "../../packages/components/*"
      ],
      "@/screens/*": [
        "../../packages/screens/*"
      ],
      "@app/*": [
        "./*"
      ],
      "@/assets/*": [
        "../../packages/shared/assets/*",
        "./assets/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}